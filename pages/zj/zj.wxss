.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx 0 20rpx;
  padding-top: 50rpx;
}
.content .img image{
  width: 710rpx;
  height:390rpx;
}
.content .title {
  padding: 20rpx;
  width: 690rpx;
}
.content .title .h {
  font-size: 32rpx;
  font-weight: 800;
  display: block;
  text-align: center;
  margin-bottom: 20rpx;
}
.content .title .p {
  font-size: 28rpx;
}
.content .bt{
  width: 670rpx;  
  margin:40rpx 0;
  font-size: 30rpx;
  font-weight: 800;
}
.content .ul {
  width: 690rpx;    
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
}
.content .ul .li {
  border-bottom: 1px solid #ccc;
  padding:30rpx 0 ;
  width: 650rpx;    
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.content .ul .li view {
  width: 250rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color:#e64340;
}
.content .ul .li view .y {
 width:80rpx;
height:80rpx;
font-size:24rpx;
border-radius:100%;
background:#d24a58;
line-height:80rpx;
color:#fff;
text-align:center;

}