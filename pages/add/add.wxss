.content {
  width: 750rpx; 
  padding-top: 50rpx;
  
}
.content .box  {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.content .box text{
  line-height:76rpx;
  height: 76rpx; 
}
.content .box view {
  width: 644rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-top: 20rpx;
}
.content .box view input{
  width: 504rpx;
  border: 1px solid #ccc;
  border-radius: 6rpx;
  padding:10rpx 0;
  font-size: 32rpx;
  padding-left: 20rpx;
}
.content .btn {
  width: 600rpx;
  height: 80rpx;
  border-radius: 0;
  margin-top: 30rpx;
  background:#d24a58;
  color: #fff;
  font-size:30rpx;
}
.content .box view .input {
  display: inline-block;
   width: 504rpx;
  border: 1px solid #ccc;
  border-radius: 6rpx;
  font-size: 32rpx;
  padding-left: 20rpx;
}