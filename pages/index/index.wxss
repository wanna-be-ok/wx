.slider,.slider_item{
  width: 100%;
  height: 320rpx;
  margin:0rpx;
}
.slider image{
  width: 100%;
  height: 100%;
  margin: 0;
}
.index_nav{
  display: flex;
  flex: warp;
  padding: 10rpx;
  width: 100%;
  flex-direction:row;
  justify-content:space-around;
  margin-top: 30rpx;
}
.index_nav>navgigator {
  width:100rpx;

}
.index_nav>navigator>image{
  width:83rpx;
  height:93rpx;
  display: inline-block;
}
.index_nav>navigator>text{
  font-size:28rpx;
  display: block;
  text-align: center;
}
/*商品列表  */
.list{
  margin-top: 30rpx;
  width: 100%;
  box-sizing: border-box;
  
}
.list .li {
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-wrap:wrap;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
  padding: 0 30rpx;
  padding-top: 30rpx;
  
}
.list .li .img,.p,.yue {
  display: flex;
  justify-content: center;
  align-content: center;
}
.list .li .img image {
  width: 170rpx;
  height: 158rpx;
}
.list .li .p {
  height: 158rpx;
  width: 400rpx;
  flex-direction: column;
  padding-left: 20rpx;
}
.list .li .p .h3 {
  font-size:32rpx;
  line-height:60rpx;
  color:#000;
  margin-bottom:10rpx;
}
.list .li .p .price {
  font-size:32rpx;
  color:#d24a58;
}
.list .li .p .title {
  font-size:26rpx;
  color:#a9a9a9;
}
.list .li .yue {
  width:80rpx;
  height: 80rpx;
  color: white;
  background:#d24a58;
  border-radius: 100%; 
  text-align: center;
  font-size: 26rpx;
  margin-top: 35rpx;
  line-height: 80rpx;
}
.index_nav navigator text{
  color: #fff;
}
.index_nav .n0 .text0{
  color: red;
}
.index_nav .n1 .text1{
  color: orange;
}
.index_nav .n2 .text2{
  color: yellow;
}
.index_nav .n3 .text3{
  color: green;
}
.index_nav .n4 .text4{
  color: purple;
}