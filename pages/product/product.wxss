.product {
  width: 100%;
  display: flex;
  flex-direction: column;

}
.product .img {
  margin: 0;
  padding: 0;
  height: 360rpx;
}
.product .img image{
  width: 750rpx;
  height: 360rpx;
}
.product .neirong {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 50rpx 80rpx; 
}
.product .neirong .time {
  width: 100%;
  box-sizing: border-box;
  font-size: 32rpx;
}
.product .neirong>text{
  font-size: 36rpx;
  font-weight: 800;
  margin-bottom: 30rpx; 
}
.product .neirong .time {
  margin-bottom: 40rpx;
}
.product .neirong .time {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.product .neirong .time view {
  width: 250rpx;
  border: 1px solid #ccc;
  text-align: center;
  padding: 16rpx 10rpx;
}
.product .neirong .input{
  font-size:32rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  padding: 16rpx 10rpx;
  margin-bottom: 40rpx;
}
.product .neirong .btn {
  width: 100%;
  border: none;
  padding: 10rpx;
  background:#d24a58;
  font-size:32rpx;
  color:#fff;
}